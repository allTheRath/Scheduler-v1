@model WebApp_Scheduler.Models.ProgramDetails

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Program Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProgramName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProgramName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProgramStartDate)
        </dt>

        <dd>
            @if (@Model.ProgramStartDate != null)
            {
                @Model.ProgramStartDate.Value.ToString("dddd, dd MMMM yyyy")

            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProgramEndDate)
        </dt>

        <dd>
            @if (@Model.ProgramEndDate != null)
            {
                @Model.ProgramEndDate.Value.ToString("dddd, dd MMMM yyyy")

            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalTeachingHoursOfDay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalTeachingHoursOfDay)
        </dd>

    </dl>
</div>
