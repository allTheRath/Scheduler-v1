@model IEnumerable<WebApp_Scheduler.Models.ProgramDetails>

@{
    ViewBag.Title = "Index";
}

<table class="table">
    <tr>
        <th>Courses</th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProgramEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalTeachingHoursOfDay)
        </th>
        <th>Change</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.ActionLink("All-Courses", "Index", "Courses",new { IdOfProgram = item.Id }, new { @class = "btn btn-default" }) </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramName)
            </td>
            <td>
                @if (item.ProgramStartDate != null)
                {
                    @item.ProgramStartDate.Value.ToString("dddd, dd MMMM yyyy")

                }
            </td>
            <td>
                @if (item.ProgramEndDate != null)
                {
                    @item.ProgramEndDate.Value.ToString("dddd, dd MMMM yyyy")

                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTeachingHoursOfDay)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
