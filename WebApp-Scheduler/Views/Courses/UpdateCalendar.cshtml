<div>
    @{
        Html.RenderAction("ProgramDetails", "Courses", new { Id = Model.ProgramId, flag = "0", flag2 = "2" });
    }
</div>
<script>
    function pp() {
        var a = "@Model.url.ToString()";
        if (a) {
            window.location.assign(a);
        }
    };
    pp();
</script>
<div class="main-flex">

    @for (var i = 0; i <= @ViewBag.TotalMonths; i++)
    {<div>

            @{
                Html.RenderAction("MonthView", new { startdate = @Model.startdate, enddate = @Model.enddate, monthNum = i, programId = @Model.ProgramId });
            }


        </div>
    }
    <div>
        @{
            Html.RenderAction("CoursesDetailsForProgram", new { ProgramId = @Model.ProgramId });
        }
    </div>
</div>

