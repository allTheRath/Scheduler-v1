@model WebApp_Scheduler.Models.ProgramDetails

@if (ViewBag.Changed == true)
{
    {
        Layout = null;
    }
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ProgramName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-top: 8px; color:#00a88d;">
                @Html.DisplayFor(model => model.ProgramName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProgramName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProgramStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="margin-top: 8px; color:#00a88d;">
                <div>
                    @if (@Model.ProgramStartDate != null)
                    {
                        @Model.ProgramStartDate.Value.ToString("dddd, dd MMMM yyyy")

                    }
                </div>
                @Html.ValidationMessageFor(model => model.ProgramStartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProgramEndDate, htmlAttributes: new { @class = "control-label col-md-2" })
